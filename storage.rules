rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // プロフィール写真のアップロード/ダウンロードを許可
    match /profile_photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // その他のファイルはデフォルトで拒否
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
